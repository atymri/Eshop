@model DataLayer.ProductGroups

@{
    ViewBag.Title = "Create";
}

@using (Ajax.BeginForm("Create", "ProductGroups", FormMethod.Post, new AjaxOptions()
{
    OnSuccess = "Success",
    UpdateTargetId = "List"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.ParentID)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GroupTitle, htmlAttributes: new { @class = "control-label col-md-2 pull-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GroupTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="افزودن" class="btn btn-success" />
            </div>
        </div>
    </div>
}
@using Eshop.Utilities
@model IEnumerable<DataLayer.Users>

@{
    ViewBag.Title = "مدیریت کاربران";
}

<h2>مدیریت کاربران</h2>

<table class="table table-bordered" dir="rtl">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles.RoleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roles.RoleTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @item.RegisterDate.ToShamsi()
        </td>
       
        <td>
            <a class="btn btn-primary btn-xs" href="@Url.Action("Edit" , "Users", new{id = item.UserID})"><i class="glyphicon glyphicon-edit"> ویرایش</i></a>
            @*@Html.ActionLink("Edit", "Edit", new {id = item.UserID}) |*@
            <a class="btn btn-danger btn-xs" href="@Url.Action("Delete" , "Users", new{id = item.UserID})"><i class="glyphicon glyphicon-trash"> حذف</i></a>
            @*@Html.ActionLink("Details", "Details", new {id = item.UserID}) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id = item.UserID })*@
        </td>
    </tr>
}

</table>

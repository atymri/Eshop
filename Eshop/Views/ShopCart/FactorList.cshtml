@model IEnumerable<Eshop.ViewModels.FactorViewModel>

<div class="container baskets-style margin-top-20">

    <div class="row basket-style">
        <section class="border-radius">
            <div class="tbl-head">
                <ul>
                    <li> شرح محصول </li>
                    <li> تعداد و وزن </li>
                    <li> قیمت واحد </li>
                    <li> قیمت کل   </li>
                </ul>
            </div>
            <div class="hidden-head">
                سبد خرید شما
            </div>
            <div class="tbl-body">
                @foreach (var item in Model)
                {
                    
                    <!-- Each Row -->
                    <ul>
                        <li>
                            <a href="" class="product-image"><img class="border-radius" src="/Images/ProductImages/Thumbnails/@item.ProductImage"></a>
                            <div class="product-info-left-side">
                                <a href="/Product/ProductDetails/@item.ProductId" class="product-title"> <h3> @item.ProductTitle</h3> </a>
                            </div>
                        </li>
                        <li>
                            <p>
                                <input type="number" onchange="Command(@item.ProductId, $(this).val())" name="points" min="1" max="30" step="1" value="@item.Count">
                            </p>
                        </li>
                        <li>
                            <label class="lbl-hidden"> قیمت واحد : </label> <span class="lbl-price"> @item.ProductPrice.ToString("#,0") تومان </span>
                        </li>
                        <li>
                            <label class="lbl-hidden"> قیمت کل : </label> <span class="lbl-price"> @((item.TotalPrice).ToString("#,0")) تومان </span>

                            <button onclick="Command(@item.ProductId, 0)"><i class="delete-button">X</i></button>
                        </li>
                    </ul>
                    <!-- End Each Row -->
                }

            </div>
            <div class="tbl-footer">
                <ul>
                    <li> قیمت کل : <span> @Model.Sum(m=>m.TotalPrice).ToString("#,0") تومان </span></li>
                    <li class="total-price"> مبلغ قابل پرداخت : <span> @Model.Sum(m=>m.TotalPrice).ToString("#,0") تومان </span></li>
                </ul>
            </div>
            <a href="/ShopCart/SaveAndContinue" type="button" class=" button border-radius submit-basket-button"> پذیرفتن و ادامه خرید </a>
            <div class="clearfix"></div>
        </section>
    </div>

</div>